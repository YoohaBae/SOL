<body>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <!--navigation bar before login-->
    <nav class="navbar fixed-top navbar-dark" style="background-color: #2D6073;">
        <div class="container-fluid">
            <button type="button" class="btn btn-outline-light" onclick="location.href='/Travel'">
                <span class="iconify" data-inline="false" data-icon="eva:arrow-back-fill"
                    style="color: #ffffff; font-size: 29px;"></span>
            </button>
            <a class="navbar-brand mx-auto" href="#">Add Ticket</a>
        </div>
    </nav>
    <main role="main" class="container">
        <div class="jumbotron">
            <br>
            <h4 style="display:inline"><b>Add Ticket</b></h4>
            <form action="/AddTicketToDB" method="post">
                <div class="mb-3 mt-3 form-group">
                    <label for="disabledTextInput">Passenger Name</label>
                    <input type="text" name="passengerName" id="disabledTextInput" class="form-control" placeholder="<%=passenger.firstName%> <%=passenger.lastName%>" disabled="disabled">
                </div>
                <div class="mb-3 form-group">
                    <label for="ticket-number">Reservation/Ticket Number</label>
                    <input class="form-control" type="number" name="ticket[ticketNumber]" id="ticket-number-input">
                </div>
                <div class="mb-3 form-group">
                    <label for="boarding-date-input">Boarding Date</label>
                    <input class="form-control" type="date" name="ticket[boardingDate]" value="2021-02-04" id="boarding-date-input">
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-secondary btn-submit" style="background-color: #2D6073;">Search</button>
                </div>
            </form>
            <button type="button" class="btn btn-circle btn-add" aria-current="page"
            onclick="location.href='QRCode.html'">
            <span class="iconify" data-inline="false" data-icon="carbon:qr-code" style="color: #ffffff; font-size: 32px;"></span>
        </button>
        </div>
    </main>
</body>
